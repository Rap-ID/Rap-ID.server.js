<h1>注册</h1>
{{#if success}}
  <div class="row">
    <div class="col s12">
      <div class="card green white-text">
        <div class="card-content white-text">
          <span class="card-title">注册成功</span>
          <p>您已经成功注册了一个账号，请下载我们的客户端~</p>
        </div>
        <div class="card-action green lighten-1">
          <a href="/download" class="white-text">下载</a>
        </div>
      </div>
    </div>
  </div>
{{/if}}
{{#if error}}
  <div class="row">
    <div class="col s12">
      <div class="card red white-text">
        <div class="card-content white-text">
          <span class="card-title">注册失败</span>
          <p>{{error}}</p>
        </div>
      </div>
    </div>
  </div>
{{/if}}
{{#unless success}}
  <div class="row">
    <form class="col s12" action="/reg" method="post">
      <div class="row">
        <div class="input-field col s12">
          <i class="mdi-action-account-circle prefix"></i>
          <input id="username" type="text" class="validate" name="username">
          <label for="username">Username</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <i class="mdi-action-lock-outline prefix"></i>
          <input id="password" type="password" class="validate" name="password">
          <label for="password">Password</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <i class="mdi-action-lock-outline prefix"></i>
          <input id="password-check" type="password" class="validate" name="password-check">
          <label for="password-check">Password Again</label>
        </div>
      </div>
      <button class="btn waves-effect waves-light" type="submit" name="action">Submit
        <i class="mdi-content-send right"></i>
      </button>
    </form>
  </div>
{{/unless}}
